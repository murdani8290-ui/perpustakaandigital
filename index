// ==================== QR SCANNER COMPONENT ====================
function QRScanner({ onResult, onClose, title }: { onResult: (text: string) => void; onClose: () => void; title: string }) {
  const scannerRef = useRef<Html5Qrcode | null>(null);
  const containerRef = useRef<HTMLDivElement>(null);
  const [error, setError] = useState('');
  const [manualId, setManualId] = useState('');
  const stoppedRef = useRef(false);

  useEffect(() => {
    let mounted = true;
    const startScanner = async () => {
      try {
        const scannerId = 'qr-reader-' + Date.now();
        if (containerRef.current) {
          containerRef.current.id = scannerId;
        }
        const html5QrCode = new Html5Qrcode(scannerId);
        scannerRef.current = html5QrCode;

        await html5QrCode.start(
          { facingMode: 'environment' },
          { fps: 10, qrbox: { width: 220, height: 220 }, aspectRatio: 1 },
          (decodedText) => {
            if (!stoppedRef.current && mounted) {
              stoppedRef.current = true;
              html5QrCode.stop().catch(() => {});
              onResult(decodedText);
            }
          },
          () => {}
        );
      } catch (err: any) {
        if (mounted) {
          setError('Kamera tidak tersedia. Gunakan input manual di bawah.');
        }
      }
    };
    startScanner();
    return () => {
      mounted = false;
      stoppedRef.current = true;
      if (scannerRef.current) {
        scannerRef.current.stop().catch(() => {});
      }
    };
  }, [onResult]);

  return (
    <div className="fixed inset-0 z-[100] bg-black/90 flex flex-col">
      {/* Header */}
      <div className="flex items-center justify-between px-4 py-3 bg-slate-900/90 border-b border-white/10">
        <h3 className="text-sm font-bold text-white">{title}</h3>
        <button onClick={onClose} className="w-8 h-8 flex items-center justify-center rounded-full bg-white/10 hover:bg-white/20 transition">
          <Icon d={Icons.x} cls="text-white" />
        </button>
      </div>

      {/* Camera area */}
      <div className="flex-1 flex flex-col items-center justify-center p-4 gap-4">
        {error ? (
          <div className="text-center space-y-4 w-full max-w-sm">
            <div className="text-5xl">üì∑</div>
            <div className="text-red-400 text-sm">{error}</div>
            <div className="space-y-3">
              <input
                className="input-field text-center text-lg font-mono"
                placeholder="Ketik ID manual..."
                value={manualId}
                onChange={e => setManualId(e.target.value)}
                autoFocus
              />
              <button
                onClick={() => { if (manualId.trim()) onResult(manualId.trim()); }}
                disabled={!manualId.trim()}
                className={`w-full py-3 rounded-xl font-semibold text-sm transition-all ${manualId.trim() ? 'btn-primary' : 'bg-white/5 text-white/20 cursor-not-allowed'}`}
              >
                Submit
              </button>
            </div>
          </div>
        ) : (
          <>
            <div className="relative w-full max-w-[280px] aspect-square rounded-2xl overflow-hidden border-2 border-indigo-500/50">
              <div ref={containerRef} className="w-full h-full" />
              {/* Scan line animation */}
              <div className="absolute inset-0 pointer-events-none">
                <div className="absolute top-0 left-0 right-0 h-0.5 bg-gradient-to-r from-transparent via-indigo-400 to-transparent animate-scan" />
              </div>
              {/* Corner markers */}
              <div className="absolute top-2 left-2 w-6 h-6 border-t-2 border-l-2 border-indigo-400 rounded-tl-lg" />
              <div className="absolute top-2 right-2 w-6 h-6 border-t-2 border-r-2 border-indigo-400 rounded-tr-lg" />
              <div className="absolute bottom-2 left-2 w-6 h-6 border-b-2 border-l-2 border-indigo-400 rounded-bl-lg" />
              <div className="absolute bottom-2 right-2 w-6 h-6 border-b-2 border-r-2 border-indigo-400 rounded-br-lg" />
            </div>
            <p className="text-white/50 text-xs text-center">Arahkan kamera ke QR Code</p>

            {/* Manual fallback */}
            <div className="w-full max-w-sm space-y-2 mt-2">
              <div className="text-center text-white/30 text-[10px]">‚Äî atau input manual ‚Äî</div>
              <div className="flex gap-2">
                <input
                  className="input-field text-sm font-mono flex-1"
                  placeholder="Ketik ID..."
                  value={manualId}
                  onChange={e => setManualId(e.target.value)}
                />
                <button
                  onClick={() => { if (manualId.trim()) { stoppedRef.current = true; scannerRef.current?.stop().catch(() => {}); onResult(manualId.trim()); } }}
                  disabled={!manualId.trim()}
                  className={`px-4 rounded-xl font-semibold text-sm transition-all ${manualId.trim() ? 'btn-primary' : 'bg-white/5 text-white/20 cursor-not-allowed'}`}
                >
                  OK
                </button>
              </div>
            </div>
          </>
        )}
      </div>
    </div>
  );
}

// ==================== MAIN APP ====================
export default function App() {
  const [currentUser, setCurrentUser] = useState<User | null>(null);
  const [page, setPage] = useState('landing');

  useEffect(() => {
    const saved = localStorage.getItem('elib_current');
    if (saved) {
      const u = JSON.parse(saved);
      setCurrentUser(u);
      setPage(u.role === 'pengunjung' ? 'v-home' : u.role === 'pustakawan' ? 'p-home' : 'a-home');
    }
    // ensure defaults exist
    getUsers();
  }, []);

  const login = (user: User) => {
    localStorage.setItem('elib_current', JSON.stringify(user));
    setCurrentUser(user);
    setPage(user.role === 'pengunjung' ? 'v-home' : user.role === 'pustakawan' ? 'p-home' : 'a-home');
  };

  const logout = () => {
    localStorage.removeItem('elib_current');
    setCurrentUser(null);
    setPage('landing');
  };

  if (!currentUser) {
    if (page === 'register') return <RegisterPage onBack={() => setPage('landing')} onLogin={login} />;
    if (page === 'login') return <LoginPage onBack={() => setPage('landing')} onLogin={login} />;
    return <LandingPage onNavigate={setPage} />;
  }

  return (
    <div className="h-full flex flex-col bg-slate-950">
      {/* Top bar */}
      <header className="flex-shrink-0 glass-dark px-4 py-2.5 flex items-center justify-between z-50">
        <div className="flex items-center gap-2 min-w-0">
          <img src={LOGO_URL} alt="Logo" className="w-8 h-8 object-contain rounded-full bg-white/10 p-0.5" />
          <div className="flex flex-col min-w-0">
            <span className="font-bold text-xs text-white truncate leading-tight">Perpustakaan SMAN 10 Pinrang</span>
            <span className="text-[9px] text-white/40 leading-tight capitalize">{currentUser.role}</span>
          </div>
        </div>
        <div className="flex items-center gap-2">
          <span className="text-xs text-white/50 hidden sm:inline truncate max-w-[120px]">{currentUser.name}</span>
          <button onClick={logout} className="p-1.5 rounded-lg hover:bg-white/10 text-white/60 hover:text-red-400 transition-colors">
            <Icon d={Icons.logout} />
          </button>
        </div>
      </header>

      {/* Content */}
      <main className="flex-1 overflow-hidden">
        {currentUser.role === 'pengunjung' && <VisitorPanel user={currentUser} page={page} setPage={setPage} setUser={(u) => { setCurrentUser(u); localStorage.setItem('elib_current', JSON.stringify(u)); }} />}
        {currentUser.role === 'pustakawan' && <PustakaPanel user={currentUser} page={page} setPage={setPage} />}
        {currentUser.role === 'admin' && <AdminPanel user={currentUser} page={page} setPage={setPage} />}
      </main>

      {/* Bottom nav */}
      <BottomNav role={currentUser.role} page={page} setPage={setPage} />

      {/* Footnote */}
      <div className="flex-shrink-0 bg-slate-950 border-t border-white/5 text-center py-1">
        <span className="text-[8px] text-white/15">Dikembangkan oleh Murdani ¬© 2025</span>
      </div>
    </div>
  );
}

