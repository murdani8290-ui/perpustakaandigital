          <img src={LOGO_URL} alt="Logo SMAN 10 Pinrang" className="w-full h-full object-contain" />
        </div>

        <div className="inline-flex items-center gap-1.5 px-3 py-1 rounded-full glass text-xs text-indigo-300 font-medium mb-3">
